@model Matthewpbaileydesigns.Core.Models.Product

@{
    ViewBag.Title = Model.Name + " Details";
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <div class="row">
        <div class="col-md-5 overflow-hidden">
            <img class="img-responsive" style="height:15.625em;"  src="~/Content/ProductImages/@Model.Image" />
        </div>
        <div class="col-md-7">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    $@Html.DisplayFor(model => model.Price)
                </dd>

                <dt>&nbsp;</dt>
                <dd>
                    <a href="#" class="btn btn-primary">Add To Cart</a>
                </dd>
                <dt>&nbsp;</dt>
                <dd>@Html.ActionLink("Back to List", "Index")</dd>
            </dl>
        </div>
    </div>
</div>
<br />
<br />
<div class="col-md-12 clearfix"></div>
